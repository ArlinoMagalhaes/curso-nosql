db.albuns.aggregate([
{
$lookup: {
from: "generos",
localField: "id_genero",
foreignField: "id",
as: "genero_info"
}
},
{
$unwind: "$genero_info"
},
{
$project: {
"nome_album": 1,
"genero_info.nome_genero": 1
}
}
]).forEach(function(album) {
print(album["nome_album"], album["genero_info"]["nome_genero"]);
});
